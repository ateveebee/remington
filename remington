def routine():
	"""Randomly generate a Remington routine based on playing level"""

	response = input('Describe your playing level:\n\n\tMiddle School\n\tHigh School\n\tCollege\n\tProfessional\n\n')

	"""Determine what level the player is at"""
	if response == 'college':
		print('Here is your autogenerated Remington warmup routine!\n')
		advanced_routine()

	elif response == 'professional':
		print('Here is your autogenerated Remington warmup routine!\n')
		advanced_routine()

	else:
		"""Logic for students still in middle or high school"""

		response = input('What grade are you in?\n\n')
		if int(response) <= 7:
			print('\nHere is your autogenerated Remington warmup routine!\n')
			ms_routine()
		elif int(response) <= 10 and int(response) >= 8:
			print('\nHere is your autogenerated Remington warmup routine!\n')
			hs1_routine()
		else:
			print('\nHere is your autogenerated Remington warmup routine!\n')
			hs2_routine()





routine()












